<tiles-definitions>
    <definition name="mainLayout" template="/WEB-INF/views/main/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/main/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/main/footer.jsp" />
    </definition>
    
    <definition name="issue" extends="mainLayout">
